@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<section class="vh-100 mb-5"  >
  <div class="container text-hite h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-lg-12 col-xl-11">
       
            <div class="row box-shadow-design text-white justify-content-center">
              <div class="col-md-10 col-lg-8   order-2 order-lg-1">

                <p class="text-center text-white h1 fw-bold mb-5 mx-1 mx-md-4 mt-4">Sign up</p>

                <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                                    <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                    <div class="row">
                                        <div class="col-lg-6 ">
                                            <div class="d-flex flex-row align-items-center mb-4">
                                                <i class="fas fa-user fa-lg me-3 fa-fw"></i>
                                                <div data-mdb-input-init class="form-outline flex-fill mb-0">
                                                    <input asp-for="Input.Full_Name" type="text" id="form3Example1c" class="form-control" />
                                            <label asp-for="Input.Full_Name" class="form-label text-white" for="form3Example1c">Your Name</label>
                                                </div>

                                            </div>
                                                <span asp-validation-for="Input.Full_Name" class="text-danger"></span>

                                            <div class="d-flex flex-row align-items-center mb-4">
                                                <i class="fas fa-envelope fa-lg me-3 fa-fw"></i>
                                                <div data-mdb-input-init class="form-outline flex-fill mb-0">
                                                    <input asp-for="Input.Email"  type="email" id="form3Example3c" class="form-control" />
                                            <label asp-for="Input.Email" class="form-label text-white" for="form3Example3c"> Email</label>
                                                </div>

                                            </div>
                                                <span asp-validation-for="Input.Email" class="text-danger"></span>

                                            <div class="d-flex flex-row align-items-center mb-4">
                                                <i class="fas fa-city fa-lg me-3 fa-fw"></i>
                                                <div data-mdb-input-init class="form-outline flex-fill mb-0">
                                                    <input asp-for="Input.City" type="text" id="form3Example4c" class="form-control" />
                                            <label asp-for="Input.City" class="form-label text-white" for="form3Example4c">City</label>
                                                </div>                                          

                                            </div>
                                                <span asp-validation-for="Input.City" class="text-danger"></span>

                                            <div class="d-flex flex-row align-items-center mb-4">
                                                <i class="fas fa-flag fa-lg me-3 fa-fw"></i>
                                                <div data-mdb-input-init class="form-outline flex-fill mb-0">
                                                    <input asp-for ="Input.Country" type="text" id="form3Example4cd" class="form-control" />
                                            <label asp-for="Input.Country" class="form-label text-white" for="form3Example4cd">Country</label>
                                                </div>                                             

                                            </div>
                                                <span asp-validation-for="Input.Country" class="text-danger"></span>
                                            <div class="d-flex flex-row align-items-center mb-4">
                                                <i class="fas fa-key fa-lg me-3 fa-fw"></i>
                                                <div data-mdb-input-init class="form-outline flex-fill mb-0">
                                                    <input asp-for="Input.Password" type="password" id="form3Example4cd" class="form-control" />
                                            <label asp-for="Input.Password" class="form-label text-white" for="form3Example4cd">Password</label>
                                                </div>                                              

                                            </div>
                                                <span asp-validation-for="Input.Password" class="text-danger"></span>
                                            <div class="d-flex flex-row align-items-center mb-4">
                                                <i class="fas fa-key fa-lg me-3 fa-fw"></i>
                                                <div data-mdb-input-init class="form-outline flex-fill mb-0">
                                                    <input asp-for="Input.ConfirmPassword" type="password" id="form3Example4cd" class="form-control" />
                                            <label asp-for="Input.ConfirmPassword" class="form-label text-white" for="form3Example4cd">Re-enter Password</label>
                                                </div>                                 

                                            </div>
                                                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                                        </div>
                                        <div class="col-lg-6">
                                            <div class="d-flex flex-row align-items-center mb-4">
                                                <i class="fas fa-phone fa-lg me-3 fa-fw"></i>

                                                 <div data-mdb-input-init class="form-outline flex-fill mb-0">
                                                    <input asp-for="Input.PhoneNumber"  type="number" id="form3Example1c" class="form-control" />
                                            <label asp-for="Input.PhoneNumber" class="form-label text-white" for="form3Example1c">Phone No.</label>
                                                </div>                                

                                            </div>
                                                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>

                                            <div class="d-flex flex-row align-items-center mb-4">
                                                <i class="fas fa-city fa-lg me-3 fa-fw"></i>

                                                 <div data-mdb-input-init class="form-outline flex-fill mb-0">
                                                    <input asp-for="Input.Address"  type="text" id="form3Example3c" class="form-control" />
                                            <label asp-for="Input.Address" class="form-label text-white" for="form3Example3c">Address</label>
                                                </div>                           

                                            </div>
                                                <span asp-validation-for="Input.Address" class="text-danger"></span>

                                            <div class="d-flex flex-row align-items-center mb-4">
                                                <i class="fas fa-city fa-lg me-3 fa-fw"></i>

                                                 <div data-mdb-input-init class="form-outline flex-fill mb-0">
                                                    <input asp-for="Input.State" type="text" id="form3Example4c" class="form-control" />
                                            <label asp-for="Input.State" class="form-label text-white" for="form3Example4c">State</label>
                                                </div>                             

                                            </div>
                                                <span asp-validation-for="Input.State" class="text-danger"></span>

                                            <div class="d-flex flex-row align-items-center mb-4">
                                                <i class="fas fa-lock fa-lg me-3 fa-fw"></i>

                                                 <div data-mdb-input-init class="form-outline flex-fill mb-0">
                                                    <input asp-for="Input.PostalCode"  type="number" id="form3Example4cd" class="form-control" />
                                            <label asp-for="Input.PostalCode" class="form-label text-white" for="form3Example4cd"> Pin Code </label>
                                                </div>                                  

                                            </div>
                                                <span asp-validation-for="Input.PostalCode" class="text-danger"></span>
                                            <div class="d-flex flex-row align-items-center mb-4">

                                                <i class="fas fa-lock fa-lg me-3 fa-fw"></i>

                                                    <select asp-for="Input.Blood_group" id="form3Example4cd" class="select form-control ">
                                                        <option value="">Select Blood Group</option>
                                                        <option value="A+">A+</option>
                                                        <option value="A-">A-</option>
                                                        <option value="B+">B+</option>
                                                        <option value="B-">B-</option>
                                                        <option value="AB+">AB+</option>
                                                        <option value="AB-">AB-</option>
                                                        <option value="O+">O+</option>
                                                        <option value="O-">O-</option>
                                                    </select>
                                                
                                            </div>
                                            <span asp-validation-for="Input.Full_Name" class="text-danger"></span>
                                            <div class="form-check d-flex justify-content-center mb-5">
                                                <input class="form-check-input me-2" type="checkbox" value="" id="form2Example3c" />
                                                <label class="form-check-label" for="form2Example3">
                                                    I agree all statements in <a asp-controller="home" asp-action="privacy">Terms of service</a>
                                                </label>
                                            </div>
                                        </div>
                    </div>
              

                  <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4">
                                        <button type="submit" class="btn btn-danger btn-block mt-0" data-mdb-ripple-init>Sign up</button>
                                    </div>

                </form>

              </div>
             
            </div>
          </div>
 
    </div>
  </div>
</section>

