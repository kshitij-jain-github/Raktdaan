@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Forgot your password?";
}

<section class="vh-100 mb-5 pb-0 mx-auto">
    <div class="container   h-75 ">
        <div class="row text-white  d-flex justify-content-center align-items-center pt-2">

            <div class="col-lg-12 col-xl-11">

                <div class="row justify-content-center">

                    <div class="col-md-10 col-lg-6 col-xl-7 pb-4  box-shadow-design ">

            <h1 class="text-white text-center">@ViewData["Title"]</h1>
            <h2 class="text-white text-center">Enter your email.</h2>
            <hr />
                      
                        <form method="post" class="mx-1 mx-md-4">
                        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                            <div class="d-flex flex-row align-items-center mb-4">
                                <i class="fas fa-envelope fa-lg me-3 fa-fw"></i>
                                <div data-mdb-input-init class="form-outline flex-fill mb-0">
                                    <input asp-for="Input.Email" type="email" id="form3Example3c" class="form-control" />
                                    <label asp-for="Input.Email" class="form-label text-white" for="form3Example3c">Your Email</label>
                                </div>
                                <span asp-validation-for="Input.Email" class="text-danger"></span>

                            </div>

                        <button type="submit" class="w-50 btn btn-lg mx-auto btn-danger">Reset Password</button>
                    </form>
                </div>
            </div>
</div>

                </div>

            </div>
 
    
</section>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
