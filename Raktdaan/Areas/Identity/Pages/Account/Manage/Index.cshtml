@page
@model IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<h3>@ViewData["Title"]</h3>

<partial name="_StatusMessage" for="StatusMessage" />
<div class="row">
    <div class="col">
        <form id="profile-form" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div class="form-floating mb-3">
                <input asp-for="Username" class="form-control" placeholder="Please choose your username." disabled />
                <label asp-for="Username" class="form-label"></label>
            </div>
            <div class="row mt-4 mb-4">
                <div class="col">
                    <div class="form-outline" data-mdb-input-init>
                        <input asp-for="Input.Full_Name" type="text" id="form3Example1" class="form-control" />
                        <label asp-for="Input.Full_Name" class="form-label" for="form3Example1">Full Name</label>
                    </div>
                    <span asp-validation-for="Input.Full_Name" class="text-danger"></span>
                </div>
                <div class="col">
                    <div class="form-outline" data-mdb-input-init>
                        <div class="form-outline" data-mdb-input-init>
                            <input asp-for="Input.Email" type="text" id="form3Example1" class="form-control" disabled />
                            <label asp-for="Input.Email" class="form-label" for="form3Example1">Email</label>
                        </div>
                        <span asp-validation-for="Input.Email" class="text-danger"></span>

                    </div>
                </div>
            </div>
            <div class="row mt-4 mb-4">
                <div class="col">
                    <div class="form-outline" data-mdb-input-init>
                        <input asp-for="Input.PhoneNumber" type="text" id="form3Example1" class="form-control" />
                        <label asp-for="Input.PhoneNumber" class="form-label" for="form3Example1">Phone Number</label>
                    </div>
                    <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                </div>
                <div class="col">
                    <div class="form-outline" data-mdb-input-init>
                        <div class="form-outline" data-mdb-input-init>
                            <input asp-for="Input.Blood_group" type="text" id="form3Example1" class="form-control" />
                            <label asp-for="Input.Blood_group" class="form-label" for="form3Example1">Blood Group</label>
                        </div>
                        <span asp-validation-for="Input.Blood_group" class="text-danger"></span>

                    </div>
                </div>
            </div>
            <div class="row mt-4 mb-4">
                <div class="col">
                    <div class="form-outline" data-mdb-input-init>
                        <input asp-for="Input.Address" type="text" id="form3Example1" class="form-control" />
                        <label asp-for="Input.Address" class="form-label" for="form3Example1">Address</label>
                    </div>
                    <span asp-validation-for="Input.Address" class="text-danger"></span>
                </div>
                <div class="col">
                    <div class="form-outline" data-mdb-input-init>
                        <input asp-for="Input.PostalCode" type="text" id="form3Example1" class="form-control" />
                        <label asp-for="Input.PostalCode" class="form-label" for="form3Example1">Postal Code</label>
                    </div>
                    <span asp-validation-for="Input.PostalCode" class="text-danger"></span>
                </div>

            </div>
            <div class="row mt-4 mb-4">
                <div class="col">
                    <div class="form-outline" data-mdb-input-init>
                        <input asp-for="Input.City" type="text" id="form3Example1" class="form-control" />
                        <label asp-for="Input.City" class="form-label" for="form3Example1">City</label>
                    </div>
                    <span asp-validation-for="Input.City" class="text-danger"></span>
                </div>

                <div class="col">
                    <div class="form-outline" data-mdb-input-init>
                        <input asp-for="Input.State" type="text" id="form3Example1" class="form-control" />
                        <label asp-for="Input.State" class="form-label" for="form3Example1">State</label>
                    </div>
                    <span asp-validation-for="Input.State" class="text-danger"></span>
                </div>
                <div class="col">
                    <div class="form-outline" data-mdb-input-init>
                        <input asp-for="Input.Country" type="text" id="form3Example1" class="form-control" />
                        <label asp-for="Input.Country" class="form-label" for="form3Example1">Country</label>
                    </div>
                    <span asp-validation-for="Input.Country" class="text-danger"></span>
                </div>
            </div>
            <button id="update-profile-button" type="submit" class="w-100 btn btn-lg btn-danger">Save</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
