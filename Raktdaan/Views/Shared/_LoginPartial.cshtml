@using Microsoft.AspNetCore.Identity

@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item">
            <a id="manage" class="nav-link" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @UserManager.GetUserName(User)!</a>
    </li>
    <li class="nav-item">
        <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button id="logout" type="submit" class="nav-link btn btn-link text-danger border-0">Logout</button>
        </form>
    </li>
}
else
{
   
    <li class="nav-item m-2  ">
            <a class="nav-link  " id="login" asp-area="Identity" asp-page="/Account/Login">Login</a>
    </li> 
        <li class="nav-item  fw-bolder  m-2  ">
            <a class="nav-link  btn btn-sm btn-outline-danger text-danger rounded-3" id="register" asp-area="Identity" asp-page="/Account/Register">Resgiter To Donate Blood Now!</a>
        </li>
}
</ul>
